{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true
	},
	"include": ["src/**/*.ts"]
}
